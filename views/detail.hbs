<form action='/todos/{{todo._id}}?_method=DELETE' method='POST' style='display: inline;'></form>
	<div class="input-group">
		<div class="input-group-text">
			<input class="form-check-input mt-0" type="checkbox" {{#if todo.isDone}}checked{{/if}} disabled/>
		</div>
		<input class="form-control" type="text" value='{{todo.name}}' />
		<a class="btn btn-primary" href='/todos/{{todo._id}}/edit'>Edit</a>		
		<button class="btn btn-danger" type='submit'>Delete</button>
	</div>
</form>
