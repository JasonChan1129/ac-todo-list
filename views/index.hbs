<ul class='list-group'>
	{{#each todos}}
		<li class='list-group-item'>
			<div class='row justify-content-between align-items-center'>
				<div class="col-auto mr-auto">
					<input type="checkbox" {{#if this.isDone}}checked{{/if}} disabled />
					<h4 class="d-inline">{{this.name}}</h4>
				</div>
				<div class="col-auto">
					<a class='btn btn-outline-secondary' href='/todos/{{this._id}}'>Detail</a>
					<a class='btn btn-outline-primary' href='/todos/{{this._id}}/edit'>Edit</a>
					<form action='/todos/{{this._id}}?_method=DELETE' method='POST' style='display: inline;'>
						<button class='btn btn-outline-danger' type='submit'>Delete</button>
					</form>
				</div>
				
			</div>
		</li>
	{{/each}}
</ul>